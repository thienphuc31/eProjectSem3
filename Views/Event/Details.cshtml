@model eProject1.Event

@{
    ViewBag.Title = "Details";
}

<h2>@Model.event_name</h2>

<table class="table">
    <tr>
        <td>Event Request:</td>
        <td>@Model.event_request</td>
    </tr>
    <tr>
        <td>Start Date:</td>
        <td>@Model.event_startdate.ToShortDateString()</td>
    </tr>
    <tr>
        <td>End Date:</td>
        <td>@Model.event_enddate.ToShortDateString()</td>
    </tr>
    <tr>
        <td>Status:</td>
        <td>
            @if (@Model.status)
            {
                <span>Đang diễn ra</span>
            }
            else
            {
                <span>Kết thúc</span>
            }
            </td>
    </tr>
</table>

@using (Html.BeginForm("Register", "EmployeeEvent", FormMethod.Post))
{
    @Html.Hidden("event_id", Model.event_id)
    <input type="submit" value="Register" class="btn btn-primary" onclick="return confirm('Are you sure to join this Event')"/>
}


