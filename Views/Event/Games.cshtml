@model IEnumerable<eProject1.Event>

@{
    ViewData["Title"] = "Games";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 style="object-position:center">MEE GAMES</h1>

<div style="height:100px"></div>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card mb-3 shadow-sm">
                    <img src="/@item.event_img" class="card-img-top" alt="..." style="object-fit:cover" width="200px" height="200px">
                    <div class="card-body">
                        <h5 class="card-title">@item.event_name</h5>
                        <p class="card-text">@item.event_content</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Event" asp-action="Details" asp-route-id="@item.event_id" class="btn btn-sm btn-outline-secondary">View</a>
                            </div>
                            <small class="text-muted">@item.event_startdate.ToString("dd/MM/yyyy") - @item.event_enddate.ToString("dd/MM/yyyy")</small>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>
</div>
