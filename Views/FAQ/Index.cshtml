@model eProject1.Models.Feedback
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .small-map {
        margin-left: 5% !important;
    }

    .error_text {
        color: white !important;
    }

    .input_group {
        color: black !important;
    }
</style>
<div class="all-title-box">
    <div class="container text-center">
        <h1>FAQ<span class="m_1">"FAQ, achieve the best results"</span></h1>
    </div>
</div>
<div id="support" class="section wb">
    <div class="container-fulid">
        <div class="section-title text-center">
            <h3>Need Help? Sure we are Online!</h3>
            <p class="lead">If you have any questions feel free to contact us.We welcome Your questions and suggestions.</p>
        </div><!-- end title -->

        <div class="row">
            <div class="col-xl-6 col-md-12 col-sm-12">
                <div class="contact_form">
                    <div id="message"></div>
                    <form id="contactform" asp-controller="FAQ" asp-action="Index" name="contactform" method="post">
                        <fieldset class="row row-fluid">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <input asp-for="firstName"  type="text" id="first_name" class="form-control input_group" placeholder="First Name">
                                <span class="error_text" id="firstname_error"></span>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <input asp-for="lastName" type="text" id="last_name" class="form-control input_group" placeholder="Last Name">
                                <span class="error_text" id="lastname_error"></span>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <input asp-for="email" type="email" id="email" class="form-control input_group" placeholder="Your Email">
                                <span class="error_text" id="email_error"></span>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <input asp-for="phone" type="text" id="phone" class="form-control input_group" placeholder="Your Phone">
                                <span class="error_text" id="phone_error"></span>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <textarea asp-for="comments" class="form-control input_group"  id="comments" rows="6" placeholder="Send us a question..."></textarea>
                                <span class="error_text" id="comments_error"></span>
                            </div>
                            <br />
                            <div class="text-center pd">
                                <button type="submit" id="submit"  class="btn btn-light btn-radius btn-brd grd1 btn-block">Submit</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div><!-- end col -->
            <div class="col-xl-6 col-md-12 col-sm-12">
                <div class="map-box">
                    <div id="custom-places" class="small-map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.325247912253!2d106.66181232276823!3d10.786382237399554!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752ed23c80767d%3A0x5a981a5efee9fd7d!2zNTkwIMSQLiBDw6FjaCBN4bqhbmcgVGjDoW5nIDgsIFBoxrDhu51uZyAxMSwgUXXhuq1uIDMsIFRow6BuaCBwaOG7kSBI4buTIENow60gTWluaCwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1676559343972!5m2!1svi!2s" width="650" height="500" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end section -->

