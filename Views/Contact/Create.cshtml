@model eProject1.Contact

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Contact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="contact_title" class="control-label"></label>
                <input asp-for="contact_title" class="form-control" />
                <span asp-validation-for="contact_title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="contact_text" class="control-label"></label>
                <input asp-for="contact_text" class="form-control" />
                <span asp-validation-for="contact_text" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>




