@model IEnumerable<eProject1.Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Employee List</h1>

<p>
    <a href="/Admin/Employee/Create" >Create New</a>
</p>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                Name
            </th>
            <th>
                Password
            </th>
            <th>
                DOB
            </th>
            <th>
                Email
            </th>
            <th>
                Address
            </th>
            <th>
                Phone
            </th>
            <th>
                Department
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.employee_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.employee_password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.employee_DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.employee_email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.employee_address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.employee_phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departments.department_name)
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="Employee" asp-action="Edit" asp-route-id="@item.employee_id">Edit</a>
                    |
                    <a asp-area="Admin" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.employee_id" onclick="return confirm('Do you want to delete this employee')">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
