@model IEnumerable<eProject1.News>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>News list</h1>

<p>
    <a href="/Admin/News/Create">Create New</a>
</p>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                Title
            </th>
            <th>
                Image
            </th>
            <th>
                Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.news_title)
                </td>
                <td>
                    <img src="/@item.news_img" width="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.news_date)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.news_id">Details</a> |
                    <a asp-area="Admin" asp-controller="News" asp-action="Delete" asp-route-id="@item.news_id" onclick="return confirm('Do you want to delete this news')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
