@model eProject1.Admin

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Create</h1>

<h4>Admin</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="admin_id" class="control-label">ID</label>
                <input asp-for="admin_id" class="form-control" />
                <span asp-validation-for="admin_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="admin_name" class="control-label">Name</label>
                <input asp-for="admin_name" class="form-control" />
                <span asp-validation-for="admin_name" class="text-danger"></span> 
            </div>
            <div class="form-group">
                <label asp-for="admin_password" class="control-label">Password</label>
                <input asp-for="admin_password" class="form-control" type="password" />
                <span asp-validation-for="admin_password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
